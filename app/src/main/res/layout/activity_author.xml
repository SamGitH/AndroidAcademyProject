<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <View
        android:layout_width="1471dp"
        android:layout_height="0dp"
        android:background="@color/Snow3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/aut_tv_header" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/aut_image_author"
        android:layout_width="0dp"
        android:layout_height="128dp"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/images"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:civ_border_width="2dp"
        />

    <TextView
        android:id="@+id/aut_tv_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/text_author"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/aut_tv_post"
        app:layout_constraintStart_toEndOf="@id/aut_image_author"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/aut_tv_post"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/aut_post"
        android:textSize="20sp"
        android:textColor="@color/DarkOrchid"
        app:layout_constraintTop_toBottomOf="@id/aut_tv_author"
        app:layout_constraintBottom_toTopOf="@id/aut_tv_city"
        app:layout_constraintStart_toEndOf="@id/aut_image_author"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/aut_tv_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/aut_city"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/aut_tv_post"
        app:layout_constraintStart_toEndOf="@id/aut_image_author"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <android.support.constraint.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="aut_tv_city, aut_image_author"
        />

    <TextView
        android:id="@+id/aut_tv_review"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/aut_review"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/barrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/aut_tv_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="@string/text_header"
        app:layout_constraintTop_toBottomOf="@id/aut_tv_review"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/aut_tv_room"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_room"
        android:textSize="25sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aut_tv_header"
        app:layout_constraintBottom_toTopOf="@id/aut_tv_android"
        />

    <TextView
        android:id="@+id/aut_tv_android"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_rectangle_orange"
        android:padding="8dp"
        android:text="@string/text_android"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/aut_tv_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aut_tv_room"
        />

    <TextView
        android:id="@+id/aut_tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_time"
        android:textSize="31sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aut_tv_android"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/aut_tv_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_date"
        android:textSize="25sp"
        android:textColor="@color/DarkOrchid"
        android:layout_margin="16dp"
        app:layout_constraintStart_toEndOf="@id/aut_tv_time"
        app:layout_constraintTop_toTopOf="@id/aut_tv_time"
        app:layout_constraintBottom_toBottomOf="@id/aut_tv_time"
        />

</android.support.constraint.ConstraintLayout>